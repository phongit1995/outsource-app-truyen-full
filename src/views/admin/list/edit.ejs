<%-include('../library/header.ejs')%>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.14/dist/css/bootstrap-select.min.css">
<script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.14/dist/js/bootstrap-select.min.js"></script>

<!-- Latest compiled and minified JavaScript -->


<!-- (Optional) Latest compiled and minified JavaScript translation files -->

<div class="container-fluid">
    <!-- start page title -->
    <div class="row">
        <div class="col-12">
            <div class="page-title-box">
                <div class="page-title-right">
                    <ol class="breadcrumb m-0">
                        <li class="breadcrumb-item"><a href="javascript: void(0);">Admin</a></li>
                        <li class="breadcrumb-item">
                            <a href="javascript: void(0);">Danh Mục</a>
                        </li>
                        <li class="breadcrumb-item active">Danh Mục Chi Tiết</li>
                    </ol>
                </div>
                <h4 class="page-title">Danh Mục Chi Tiết</h4>
            </div>
        </div>
    </div>
    <!-- end page title -->

    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <div class="tab-content">
                        <div class="tab-pane show active" id="custom-styles-preview">
                            <form
                                class="needs-validation"
                                novalidate
                                action="/admin/danh-muc/update/<%=listDetail._id%>"
                                method="post"
                            >
                                <div class="mb-3">
                                    <label class="form-label" for="validationCustom01"
                                        >Tên Danh mục</label
                                    >
                                    <input
                                        type="text"
                                        class="form-control"
                                        id="validationCustom01"
                                        placeholder="Tiêu đề"
                                        required
                                        name="name"
                                        value="<%=listDetail.name%>"
                                    />
                                    <div class="valid-feedback">Looks good!</div>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label" for="validationCustom01"
                                        >Mô Tả</label
                                    >
                                    <textarea
                                        class="form-control"
                                        id="example-textarea"
                                        rows="5"
                                        name="description"
                                    ><%=listDetail.description%></textarea>
                                    <div class="valid-feedback">Looks good!</div>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label" for="validationCustom01"
                                        >Thể Loại</label
                                    >
                                    <div> 
                                        
                                    </div>
                                    <select
                                        class="selectpicker form-control"
                                        multiple
                                        name="category"
                                    >
                                        <%category.forEach(item=>{ %>
                                        <option><%=item.name%></option>
                                        <%})%>
                                    </select>
                                    <div class="valid-feedback">Looks good!</div>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label" for="validationCustom01"
                                        >Lọc / Sắp Xếp</label
                                    >
                                    <select class="selectpicker2 form-control" name="filter">
                                        <option value=1 <%=listDetail.filter==1?"selected":null%> >Truyện Có Chapter Mới Nhất</option>
                                        <option value=2 <%=listDetail.filter==2?"selected":null%> > Truyện Đã Hoàn Thành</option>
                                        <option value=3 <%=listDetail.filter==3?"selected":null%>>Truyen Hot Nhất</option>
                                    </select>
                                    <div class="valid-feedback">Looks good!</div>
                                </div>
                                <button class="btn btn-primary" type="submit">Cập Nhật</button>
                            </form>
                        </div>
                        <!-- end preview-->
                    </div>
                    <!-- end tab-content-->
                </div>
                <!-- end card-body-->
            </div>
            <!-- end card-->
        </div>
        <!-- end col-->
    </div>
    <!-- end row -->
</div>
<!-- container -->
<!-- quill js -->
<script>
    const dataCategory = `<%=listDetail.category%>`.split(',');
    $('.selectpicker').selectpicker('val', dataCategory);
</script>
<%-include('../library/footer.ejs')%>
