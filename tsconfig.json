{
    "compilerOptions": {
      "module": "commonjs",
      "declaration": true,
      "removeComments": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "target": "es2017",
      "sourceMap": true,
      "outDir": "./dist",
      "baseUrl": ".",
      "incremental": true,
      "esModuleInterop": true,
      "resolveJsonModule": true
    },
    "include": ["src"],
    "exclude": ["src/node_modules", "dist", "*.js"],
    "types": ["node"]
  }
  